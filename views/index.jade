extends layout

block content
  div#tabs
    ul
      li: a(href='#tabs-1') Products
      li: a(href='#tabs-2') Ingredients
    div#tabs-1
      input#products
      button#add-product Add
      table#products: tbody
    div#tabs-2
      input#ingredients
      button#add-ingredient Add
      table#ingredients: tbody

  table#common-ingredients
    tbody
      tr
        th Ingredients in common
  table#common-products
    tbody
      tr
        th Products in common

  script(type='text/javascript', src='/javascripts/jquery-1.8.0.min.js')
  script(type='text/javascript', src='/javascripts/jquery-ui-1.8.23.custom.min.js')
  script
    var products = !{settings.products};
    var ingredients = !{settings.ingredients};
    var productIngredients = !{settings.productIngredients};
    var ingredientProducts = !{settings.ingredientProducts};
  script(type='text/javascript', src='/javascripts/underscore-min.js')
  script(type='text/javascript', src='/javascripts/main.js')